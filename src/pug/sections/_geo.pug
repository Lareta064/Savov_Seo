section.geo
	.container
		.flex-header
			h2.title Клиенты
			p Наша география 
		.geo-map
			img.wh-100(src="./img/geo.webp", width="1630" height="800" alt="alt")
			
			//==== RUSSIA ====
			.country-box.country-russia
				svg.svg-russia
					use(href='./img/sprite.svg#svg-russia')
				p.country-name  Russian Federation
				p.city-one Petersburg
				p.city-two Moscow
				p.city-three Kazan
				p.city-four Rostov
				p.city-five Krasnodar
				p.city-six Ufa
				p.city-seven Ekaterinburg
				p.city-eight Chelyabinsk
				p.city-nine Omsk
				p.city-ten Krasnoyarsk
				p.city-eleven Novosibirsk
				p.city-twelve Yakutsk
				p.city-thirteen Vladivostok
				p.city-fourteen Kamchatka

			//==== Belarus ====
			.country-box.country-belarus
				svg.svg-belarus
					use(href='./img/sprite.svg#svg-belarus')
				p.country-name  Belarus
				p.city-one Minsk
			
			//==== CHINA ====
			.country-box.country-china
